<nav aria-label="Page navigation">
    <ul class="pagination">

        <li class="{{ (dataProviderEntity.page == 1) ? 'disabled' : '' }}">
            <a href="?page={{ dataProviderEntity.page - 1 }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {% for page in range(1, dataProviderEntity.pageCount) %}
            <li class="{{ (dataProviderEntity.page == page) ? 'active' : '' }}">
                <a href="?page={{ page }}">{{ page }}</a>
            </li>
        {% endfor %}

        <li class="{{ (dataProviderEntity.page == dataProviderEntity.pageCount) ? 'disabled' : '' }}">
            <a href="?page={{ dataProviderEntity.page + 1 }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>